<Window x:Class="AngryBirds.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AngryBirds"
        mc:Ignorable="d"
 
		Title="Menu"
		Height="400"
		Width="600">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Фон.jpg" />
        </Grid.Background>
        <Button x:Name="btn1" Click="Button_Click_Play" HorizontalAlignment="Center" VerticalAlignment="Top" Width="150" Height="70" BorderThickness="0,0,0,0" Margin="0,138,0,0" >
            <Button.Background>
                <ImageBrush ImageSource="/кнопка1.png" TileMode="None" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button x:Name="btn2" Click="Button_Click_Exit" HorizontalAlignment="Center" VerticalAlignment="Top" Width="150" Height="70" BorderThickness="0,0,0,0" Margin="0,208,0,0" >
            <Button.Background>
                <ImageBrush ImageSource="/pngwing.com.png" TileMode="None" Stretch="UniformToFill"/>
            </Button.Background>
        </Button>
    </Grid>
</Window>
